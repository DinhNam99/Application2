<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/layout_300"
    android:background="@android:color/white"
    android:layout_marginRight="@dimen/mardin_2"
    android:layout_marginLeft="@dimen/mardin_2"
    android:id="@+id/layout_image2"
    android:visibility="visible"
    android:weightSum="2"
    >
    <ImageView
        android:layout_marginRight="@dimen/margin_5"
        android:layout_weight="1"
        android:id="@+id/image21"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_300"
        android:src="@drawable/unin"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_weight="1"
        android:id="@+id/image22"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_300"
        android:src="@drawable/unin"
        android:scaleType="centerCrop"
        />

</LinearLayout>
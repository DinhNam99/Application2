<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/layout_300"
    android:background="@android:color/white"
    android:layout_marginRight="@dimen/mardin_2"
    android:layout_marginLeft="@dimen/mardin_2"
    android:id="@+id/layout_image3"
    android:visibility="visible"
    android:weightSum="2"
    >
    <ImageView
        android:layout_marginRight="@dimen/margin_5"
        android:layout_weight="1"
        android:id="@+id/image31"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_300"
        android:src="@drawable/unin"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_300"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        >
        <ImageView
            android:id="@+id/image32"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_150"
            android:src="@drawable/unin"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/image33"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_alignParentRight="true"
            android:layout_below="@id/image32"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_150"
            android:src="@drawable/unin"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>